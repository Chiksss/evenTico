create table TicoTEC.hotel(
	idHotel int NOT NULL,
	salasConferencias int NOT NULL,
	espaciosDisp int NOT NULL,
	dieccion varchar (50) NOT NULL,
);

ALTER TABLE TicoTEC.hotel ADD CONSTRAINT hotel_PK PRIMARY KEY (idHotel);
